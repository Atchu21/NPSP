<aura:component implements="lightning:actionOverride,force:hasRecordId">
    <aura:dependency resource="c:rdEntryForm" />

    <aura:attribute name="parentId" type="Id" description="Reference to the parent Id if open from related list"/>
    <aura:attribute name="modal" type="Object" description="Reference to the rdEntryForm modal"/>
    
    <lightning:overlayLibrary aura:id="overlayLib"/>

    <aura:handler name="init" value="{!this}" action="{!c.handleShowModal}"/>

    <c:utilDedicatedListener eventName="rdEntryFormEvent"
                             onreceiveevent="{!c.handleModalEvent}" />
</aura:component>
